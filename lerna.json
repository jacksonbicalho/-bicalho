{
  "$schema": "node_modules/@lerna-lite/cli/schemas/lerna-schema.json",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "npmClient": "yarn",
  "command": {
    "version": {
      "conventional-prerelease": true,
      "sync-workspace-lock": true
    },
    "publish": {
      "conventionalCommits": true
    }
  }
}
